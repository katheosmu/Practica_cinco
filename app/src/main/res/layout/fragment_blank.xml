    tools:context="mainactivity.katherineosorio.com.practica_cinco.BlankFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        style="@style/textViewStyleTittle"
        android:text="@string/app_name"/>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/san_rafael"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    <TextView
        style="@style/textViewStyle"
        android:text="@string/publicidad"></TextView>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="500dp"
        android:src="@drawable/sanrafael"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"/>
    </LinearLayout>

</ScrollView>
